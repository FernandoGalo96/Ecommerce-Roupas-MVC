@model Camiseta

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImagemUrl" class="img-fluid"/> </p>
    <h4>
        <a asp-controller="Camiseta" asp-action="Details" asp-route-camisetaId="@Model.CamisetaId"> @Model.Nome </a>
    </h4>
    <h3>Preço: @Model.Preco</h3>
    <p>@Model.Descricao</p>

    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" 
            asp-action="AdicionarItemNoCarrinhoCompra" asp-route-camisetaId="@Model.CamisetaId">
            Adicionar ao Carrinho
        </a>
        </p>
    </div>

</div>